<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="picker.MainPage">

    <StackLayout Orientation="Vertical">
        <Label Text="Calculadora con Picker" HorizontalOptions="Center" FontSize="Large" Margin="0,20" TextColor="Red"/>
        <Entry Placeholder="Ingrese el primer número" x:Name="txt1" />
        <Entry Placeholder="Ingrese el segundo número" x:Name="txt2" />
        <Label Text="Haga click para seleccionar la operación" FontSize="Medium"/>
        <Picker x:Name="pickOper" SelectedIndexChanged="pickOper_SelectedIndexChanged"/>
        <Label Text="----------" FontSize="Medium" x:Name="lblres" />
    </StackLayout>

</ContentPage>
